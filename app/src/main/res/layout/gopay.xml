<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gopay1">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_back"/>

    <TextView
        android:id="@+id/hg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hubungkan GoPay"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ii"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/hg"
        android:src="@drawable/brimo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:id="@+id/py"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/hg"
        android:src="@drawable/gopay2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="240dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/py"
        android:layout_marginTop="80dp"
        android:text="Fitur Untukmu"
        android:textColor="#08628A"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/py"
        android:layout_marginTop="116dp"
        android:text="Saldo Terlihat di BRImo"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="109dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/text3"
        android:text="Kamu dapat melihat saldo GoPay dengan lebih mudah dan cepat"
        android:textColor="#7E000000"
        android:textSize="13dp"
        android:layout_marginLeft="109dp"/>

    <ImageView
        android:id="@+id/nn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hg"
        android:src="@drawable/baseline_loop_24"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="190dp"/>

    <Button
        android:layout_width="393dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text4"
        android:text="Hubungkan Sekarang"
        android:layout_marginTop="300dp"
        android:backgroundTint="#1F8EE4"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>